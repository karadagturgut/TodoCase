@model TodoCase.Core.ViewModel.TaskListViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var personelList = Model.PersonList.Select(i => new SelectListItem() { Text = i.Name + " " + i.LastName, Value = i.Id.ToString() });
}

<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    Açıklama
                </div>
                <div class="col-8">
                    <input asp-for="Task.Description" class="form-control" />
                    <span asp-validation-for="Task.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Bitim Tarihi
                </div>
                <div class="col-8">
                    <input asp-for="Task.DeadlineDate" class="form-control" />
                    <span asp-validation-for="Task.DeadlineDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Durumu
                </div>
                <div class="col-8">
                    <textarea asp-for="TaskStatus" class="form-control"> </textarea>
                    <span asp-validation-for="TaskStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Atanan
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Task.PersonelId, personelList, "-- Kullanıcı Seçiniz --", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col-md-6">
                            <button onclick="return validateInput()" type="submit" class="btn btn-primary"> Ekle</button>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" class="btn btn-success"> Kayıt Listesi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


